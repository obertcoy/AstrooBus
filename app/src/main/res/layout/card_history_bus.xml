<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="15dp"
        android:paddingEnd="25dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="2.5dp"
                android:layout_height="20dp"
                app:cardBackgroundColor="@color/default_primary" />

            <TextView
                android:id="@+id/history_bus_card_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Mon, 9 Oct 2023"
                android:textColor="@color/default_primary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            >


            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/baseline_directions_bus_24"
                app:tint="@color/default_primary" />

            <TextView
                android:id="@+id/history_bus_card_location_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Citywalk Lippo - Blok M"
                android:textColor="@color/default_primary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/history_bus_card_plate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B 1901 LI"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/history_bus_card_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00 - 19:00"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/history_bus_card_seat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat: 04"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/history_bus_card_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 45.000"
                android:textColor="@color/default_green"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>