<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.guest.GuestRegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
        android:id="@+id/register_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:contentDescription="@string/back_arrow"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/register_back_arrow"
            app:layout_constraintTop_toBottomOf="@id/register_back_arrow">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_new"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />

            <View
                android:layout_width="45dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/horizontal_oval_line" />

            <!--        full name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="300dp"
                android:autofillHints="name"
                android:background="@drawable/input_border"
                android:hint="@string/enter_your_name"
                android:inputType="text"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/placeholder"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--        email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/email_address"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_et_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="300dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/input_border"
                android:hint="@string/enter_your_email_address"
                android:inputType="textEmailAddress"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/placeholder"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--        password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/password"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="300dp"
                android:autofillHints="password"
                android:background="@drawable/input_border"
                android:hint="@string/enter_your_password"
                android:inputType="textPassword"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/placeholder"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--        confirm password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/confirm_password"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_et_conf_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="300dp"
                android:autofillHints="password"
                android:background="@drawable/input_border"
                android:hint="@string/confirm_your_password"
                android:inputType="textPassword"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/placeholder"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--        phone number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/phone_number"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_et_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="300dp"
                android:autofillHints="phone"
                android:background="@drawable/input_border"
                android:hint="@string/enter_your_phone_number"
                android:inputType="phone"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/placeholder"
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/register_btn_register"
                android:text="@string/register"
                android:textSize="22sp"
                style="@style/button_primary"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>