<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_primary_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="2.5dp"
                android:layout_height="20dp"
                app:cardBackgroundColor="@color/white" />

            <TextView
                android:id="@+id/admin_dashboard_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Mon, 9 Oct 2023"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="7.5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/baseline_access_time_24"
                app:tint="@color/white" />
            

            <TextView
                android:id="@+id/admin_dashboard_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20:00"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buses"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/default_primary"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="5dp"

                    android:gravity="bottom"

                    >

                    <ImageView
                        android:src="@drawable/baseline_directions_bus_24"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        app:tint="@color/default_primary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="230"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/default_primary"
                        android:layout_marginStart="7.5dp"
                        android:layout_marginEnd="2dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Active Buses"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="5dp"
                    android:gravity="bottom"

                    >

                    <ImageView
                        android:src="@drawable/baseline_directions_bus_24"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        app:tint="@color/gray"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:layout_marginStart="7.5dp"
                        android:layout_marginEnd="2dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Non-Active Buses"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservations"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/default_primary"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:gravity="bottom"

                    >

                    <ImageView
                        android:src="@drawable/baseline_directions_run_24"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        app:tint="@color/default_primary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/default_primary"
                        android:layout_marginStart="7.5dp"
                        android:layout_marginEnd="3dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Ongoing Reservations"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:gravity="bottom"

                    >

                    <ImageView
                        android:src="@drawable/baseline_check_circle_24"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        app:tint="@color/default_green"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="172"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/default_green"
                        android:layout_marginStart="7.5dp"
                        android:layout_marginEnd="3dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Reservations Today"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>