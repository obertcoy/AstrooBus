<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/landing_logo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:scaleX="1.5"
            android:scaleY="1.25"
            android:src="@drawable/light_logo_foreground"
            android:layout_marginTop="-80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/landing_art"

            app:shapeAppearanceOverlay="@style/roundSquare" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/landing_art"
        android:src="@mipmap/astroobus_art_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:shapeAppearanceOverlay="@style/roundSquare"
        />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginTop="-110dp"
            android:layout_below="@id/landing_logo"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Your Seat to the Stars!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Celestial Journey Starts Here!"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:textColor="@color/placeholder"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

           <Button
               android:id="@+id/landing_btn_login"
               android:text="Login"
               style="@style/button_primary"
               android:layout_marginTop="30dp"/>

            <Button
                android:id="@+id/landing_btn_register"
                android:text="Register"
                style="@style/button_secondary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>