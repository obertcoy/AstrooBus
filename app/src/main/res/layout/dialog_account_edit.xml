<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/account_edit_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:contentDescription="@string/back_arrow"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_edit_back_arrow">

        <TextView
            android:id="@+id/account_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your ..."
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/account_edit_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:autofillHints="name"
            android:background="@drawable/input_border"
            android:hint="Enter your ..."
            android:inputType="text"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/placeholder"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/account_edit_btn"
            style="@style/button_primary"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="75dp"
            android:textSize="20sp"
            android:text="Change" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>